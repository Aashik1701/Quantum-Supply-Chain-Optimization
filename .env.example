# Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=change-this-in-production-use-a-long-random-string
VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/supply_chain
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=change-this-jwt-secret-key-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# External API Keys
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here
IBM_QUANTUM_TOKEN=your_ibm_quantum_token_here

# Quantum Computing Configuration
QISKIT_DEVICE=simulator
QUANTUM_BACKEND=qasm_simulator

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=100/hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WS_URL=ws://localhost:5000

# External Services
REACT_APP_MAPBOX_TOKEN=pk.eyJ1IjoibmF2ZWVuMDA0IiwiYSI6ImNtZXYxcHF3dDBlNGgybXB3dnFrbzBwNWMifQ.isQDuDVOByLequGo7_EuRw

# Feature Flags
REACT_APP_ENABLE_QUANTUM=true
REACT_APP_ENABLE_CLASSICAL=true
REACT_APP_ENABLE_HYBRID=true

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_DB=supply_chain
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Hot Reload
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Debug Configuration
DEBUG=false
FLASK_DEBUG=false
REACT_APP_DEBUG=false

# Testing
TEST_DATABASE_URL=sqlite:///:memory:
PYTEST_CURRENT_TEST=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container Settings
COMPOSE_PROJECT_NAME=quantum-supply-chain
COMPOSE_HTTP_TIMEOUT=120
DOCKER_BUILDKIT=1

# Resource Limits
BACKEND_MEMORY_LIMIT=512m
FRONTEND_MEMORY_LIMIT=256m
POSTGRES_MEMORY_LIMIT=256m
REDIS_MEMORY_LIMIT=128m

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env:
#    cp .env.example .env

# 2. Generate secure secret keys:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"

# 3. Get your Mapbox token:
#    - Sign up at https://www.mapbox.com/
#    - Create a new access token
#    - Copy the token to MAPBOX_ACCESS_TOKEN

# 4. (Optional) Get IBM Quantum token:
#    - Sign up at https://quantum-computing.ibm.com/
#    - Go to Account settings
#    - Copy your API token to IBM_QUANTUM_TOKEN

# 5. Update database credentials for production

# 6. Configure external services as needed
